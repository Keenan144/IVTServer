<% if current_user %>
<p id="notice"><%= notice %></p>


<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Listing Units
                <small>Individual Units</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="/dashboard">Dashboard</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Individual Units
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Listing Individual Units</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Unit Number</th>
                            <th>Last Updated</th>
                            <th>Last User</th>
                            <th>Last Address</th>
                            <th>Scans</th>
                        </tr>
                    </thead>
                    <% @units.each do |base| %>
                    <% unit = Unit.find_by(unit_number: base) %>
                    <% time = Time.parse(unit.created_at.to_s).in_time_zone("Central Time (US & Canada)") %>
                      <tr>
                        <td><strong> <%= link_to base, unit %></strong></td>
                        <td><%= link_to time.strftime("%m/%d/%Y at %I:%M%p CT"), unit%></td>
                        <td> <%= link_to unit.username, unit %></td>
                         <td> <%= link_to self.parse_address(unit.address), unit %></td>
                        <td><%= Unit.where(unit_number: base).count %></td>

                      </tr>
                    <% end %>
                    <tbody>
  
                    </tbody>
                </table>
            </div>
            <div class="text-right">
                <a href="/all_scans">View All Unit Scans <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
<% end %>
